{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@unimi/unimi": ["dist/unimi"],
      "@unimi/unimi/*": ["dist/unimi/*"],
      "@unimi/portal": ["dist/portal"],
      "@unimi/portal/*": ["dist/portal/*"]
    }
  }
}
